{
  "manifest_version": 3,
  "name": "VIA All Keycodes",
  "description": "Adds a searchable 'All Keycodes' master list to the VIA keyboard configurator",
  "version": "1.0.0",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://www.usevia.app/*", "http://localhost:*/*"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "src/assets/icon16.png",
    "48": "src/assets/icon48.png",
    "128": "src/assets/icon128.png"
  }
}
